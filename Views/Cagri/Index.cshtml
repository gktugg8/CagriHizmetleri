@model List<CagriOperatorleri>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Müşterisi Olan Personel Listesi</h2>
<br />
<table class="table table-dark">
    <tr>

        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Musteri</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Ad</td>
            <td>@x.Soyad</td>
            <td>@x.musteri.Ad</td>



            <td>
                <a href="/Cagri/Sil/@x.ID" class="btn btn-danger">Sil</a>
                <a href="/Cagri/CalisanGetir/@x.ID" class="btn btn-success">Güncelle</a>
                <a href="/Cagri/MusteriSec/@x.ID" class="btn btn-light">Müşteri Değiştir</a>





            </td>

        </tr>

    }
</table>
<a href="/Cagri/Ekle" class="btn btn-primary">Çalışan Ekle</a>
<a href="/Cagri/MusteriYok" class="btn btn-primary">Müşterisi Olmayanları Listele</a>

