@model CagriHizmetleri.Models.CagriOperatorleri
@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-group" method="post">
    <b>Ad:</b>
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    <b>Soyad:</b>
    @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
    <br />
    




    <button class="btn btn-info">Kişi Ekle</button>
    <a href="@Url.Action("Index","Cagri")" class="btn btn-warning" style="color:#ffffff">Vazgeç</a>
</form>

